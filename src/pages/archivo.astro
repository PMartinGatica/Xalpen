---
import Layout from "../layouts/Layout.astro"

import HeroContainer from "../components/HeroContainer.astro"

import Numeros from "../components/Numeros.astro"
import Galeria from "../components/Galeria.astro"

import Button from "../components/Button.tsx"

import { getI18N } from "../i18n/index.ts"


const edicion = "2"
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout
  title=`${i18n.SEO.ARCHIVO_TITLE}&nbsp;${new Date().getFullYear()}`
  description={i18n.SEO.ARCHIVO_DESCRIPTION}
>
  <HeroContainer img="/info-parquenacional.jpeg">
    <h1
    id="titulo" class="lg:text-6xl text-4xl text-center uppercase mb-20 font-tomaso tracking-widest text-yellow-300"
    >
      {i18n.ARCHIVO.HERO_TITLE}
    </h1>

  </HeroContainer>

  <main class="pb-24">
    <Galeria />
    
  </main>
</Layout>
