---
import { CountUp } from "./CountUp";
---

<section class=" max-w-6xl mx-auto py-20 px-20">
    <h2 class=" text-4xl lg:text-6xl font-tomaso text-center text-balance lg:mb-20 mb-10">Nuestros Numeros</h2>

    <div class=" grid grid-cols-1 lg:grid-cols-3 gap-y-10 " >
    
        <div class="flex flex-col justify-center items-center">
        
            <span class="text-7xl font-bold tabular-nums tracking-tighter">
                <CountUp client:visible initial={0} final={120} />
            </span>
        
        <span class=" uppercase opacity-70">Translados</span>
    </div>
    <div class="flex flex-col justify-center items-center">
        
            <span class="text-7xl font-bold tabular-nums tracking-tighter" >+<CountUp client:visible initial={0} final={20} /></span>
        
        <span class=" uppercase opacity-70">Lugares por descubrir</span>
    </div>
    <div class="flex flex-col justify-center items-center">
        
            <span class="text-7xl font-bold tabular-nums tracking-tighter"><CountUp client:visible initial={0} final={188} /></span>
        
        <span class=" uppercase opacity-70">Turistas Contentos</span>
    </div>
</div>
</section>