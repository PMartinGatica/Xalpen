---

import 'photoswipe/style.css';
---

<div class=" grid grid-cols-3 max-w-6xl gap-9 mx-auto py-20" id="gallery">
    {
        Array.from({ length: 9}).map((_, i) =>(
            <a 
             class=" group rounded-xl  hover:scale-105 transition-all relative"
             href={`/ArchivoPage/Gallery/img-${i + 1}.jpg`} 
             target="_blank"
             >
             

             <img
             class=" blur-lg absolute inset-0 transition group-hover:contrast-150 opacity-70 -z-10"
             loading="lazy"
             src={`/ArchivoPage/Gallery/img-${i + 1}.webp`}  
             alt=""
             />
             <img
             class=" rounded-xl"
             loading="lazy"
             src={`/ArchivoPage/Gallery/img-${i + 1}.webp`}  
             alt=""
             />
             </a>
        ))
    }

</div>




  <script >
    import PhotoSwipeLightbox from 'photoswipe/lightbox';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();
    </script>
